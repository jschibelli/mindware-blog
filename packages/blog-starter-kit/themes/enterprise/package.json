{
	"name": "@starter-kit/blog-enterprise",
	"private": true,
	"_comment": "Script Documentation:",
	"_scripts": {
		"build": "Build the Next.js application for production",
		"codegen": "Generate GraphQL types and operations from schema",
		"dev": "Start development server with concurrent code generation",
		"fetch-issue-21": "Fetch GitHub issue #21 for testing purposes",
		"format": "Format code using Prettier with project-specific ignore rules",
		"lint": "Run ESLint to check code quality and style",
		"lint:fix": "Run ESLint and automatically fix fixable issues",
		"lint:staged": "Run linting on staged files only (for pre-commit hooks)",
		"postbuild": "Generate sitemap after build completion",
		"start": "Start the production Next.js server",
		"test": "Run all Jest unit tests with passWithNoTests flag",
		"test:unit": "Run unit tests in the tests/ directory",
		"test:analytics-unit": "Run analytics-specific unit tests",
		"test:coverage": "Run tests with coverage reporting",
		"test:accessibility": "Run Playwright accessibility tests",
		"test:seo": "Run Playwright SEO compliance tests",
		"test:analytics": "Run analytics performance testing script",
		"test:analytics:watch": "Run analytics tests in watch mode with nodemon",
		"test:cross-browser": "Run Playwright tests across multiple browsers",
		"test:performance": "Run comprehensive performance testing suite",
		"fix:playwright-reports": "Fix formatting issues in Playwright report files",
		"typecheck": "Run TypeScript type checking without compilation"
	},
	"scripts": {
		"build": "next build",
		"codegen": "graphql-codegen --config codegen.yml",
		"dev": "concurrently \"next\" \"pnpm codegen --watch\" --names next,codegen",
		"fetch-issue-21": "ts-node scripts/fetch-github-issue.ts",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\" --ignore-path ../../../../.prettierignore",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"lint:staged": "lint-staged",
		"postbuild": "next-sitemap",
		"start": "next start",
		"test": "jest --passWithNoTests",
		"test:unit": "jest tests/ --passWithNoTests",
		"test:analytics-unit": "jest tests/analytics/ --passWithNoTests",
		"test:coverage": "jest --coverage --passWithNoTests",
		"test:accessibility": "playwright test tests/accessibility*.spec.ts",
		"test:seo": "playwright test tests/seo-comprehensive.spec.ts",
		"test:analytics": "node scripts/test-analytics-performance.js || echo 'Analytics tests failed'",
		"test:analytics:watch": "nodemon scripts/test-analytics-performance.js || echo 'Analytics watch tests failed'",
		"test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit || echo 'Cross-browser tests failed'",
		"test:performance": "npm run test:analytics && npm run test:cross-browser || echo 'Performance tests failed'",
		"fix:playwright-reports": "node scripts/fix-playwright-reports.js || echo 'Playwright report fixing failed'",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@graphql-typed-document-node/core": "^3.2.0",
