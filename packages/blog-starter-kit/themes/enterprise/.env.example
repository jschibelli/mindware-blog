# =============================================================================
# Mindware Blog - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application URL (required for production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Site Configuration
NEXT_PUBLIC_SITE_NAME="Mindware Blog"
NEXT_PUBLIC_SITE_DESCRIPTION="Technology & Development Blog"
NEXT_PUBLIC_SITE_URL=https://mindware.hashnode.dev

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (required)
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://username:password@localhost:5432/mindware_blog"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Admin User Credentials (for initial setup)
ADMIN_EMAIL=admin@mindware.dev
ADMIN_PASSWORD=your-secure-admin-password

# =============================================================================
# HASHNODE INTEGRATION
# =============================================================================

# Hashnode Publication Host (your blog's subdomain)
NEXT_PUBLIC_HASHNODE_PUBLICATION_HOST=mindware.hashnode.dev

# Hashnode GraphQL Endpoint
NEXT_PUBLIC_HASHNODE_GQL_ENDPOINT=https://gql.hashnode.com/

# =============================================================================
# AI & CHATBOT CONFIGURATION
# =============================================================================

# OpenAI API Key (for AI chatbot features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Chatbot Configuration
CHATBOT_ENABLED=true
CHATBOT_VOICE_ENABLED=true
CHATBOT_SCHEDULING_ENABLED=true

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend API Key (for transactional emails)
RESEND_API_KEY=re_your-resend-api-key-here

# Email Configuration
FROM_EMAIL=noreply@mindware.dev
ADMIN_EMAIL=admin@mindware.dev

# =============================================================================
# GOOGLE SERVICES INTEGRATION
# =============================================================================

# Google OAuth (for Gmail, Calendar, Analytics)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google/oauth/callback
GOOGLE_OAUTH_REFRESH_TOKEN=your-google-refresh-token

# Google Calendar
GOOGLE_CALENDAR_ID=your-calendar-id@gmail.com

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook/Meta API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ID=your-facebook-page-id

# Twitter/X API (if using)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Plausible Analytics
PLAUSIBLE_API_TOKEN=your-plausible-api-token
PLAUSIBLE_SITE_ID=your-site-id

# Sentry (Error Monitoring)
SENTRY_DSN=your-sentry-dsn
SENTRY_API_TOKEN=your-sentry-api-token

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Vercel Configuration
VERCEL_API_TOKEN=your-vercel-api-token
VERCEL_PROJECT_ID=your-vercel-project-id

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# FILE STORAGE
# =============================================================================

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
FEATURE_GMAIL=true
FEATURE_CALENDAR=true
FEATURE_SOCIAL=true
FEATURE_DEVOPS=true
FEATURE_ANALYTICS=true
FEATURE_FINANCE=true
FEATURE_CHATBOT=true
FEATURE_NEWSLETTER=true

# =============================================================================
# CRON & BACKGROUND JOBS
# =============================================================================

# Cron Secret (for secure cron job execution)
CRON_SECRET=your-secure-cron-secret

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
NODE_ENV=development

# Debug Mode
DEBUG=false

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env.local
# 2. Fill in all required values (marked as "required")
# 3. Optional values can be left empty if not using those features
# 4. Never commit .env.local to version control
# 5. For production, set NODE_ENV=production and use production URLs/keys

# Required for basic functionality:
# - DATABASE_URL
# - NEXTAUTH_SECRET
# - NEXT_PUBLIC_HASHNODE_PUBLICATION_HOST

# Required for admin access:
# - ADMIN_EMAIL
# - ADMIN_PASSWORD

# Required for AI features:
# - OPENAI_API_KEY

# Required for email:
# - RESEND_API_KEY

# Required for social media:
# - GOOGLE_CLIENT_ID, GOOGLE_CLIENT_SECRET
# - LINKEDIN_CLIENT_ID, LINKEDIN_CLIENT_SECRET
# - FACEBOOK_APP_ID, FACEBOOK_APP_SECRET
