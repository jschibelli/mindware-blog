{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@starter-kit/tsconfig/nextjs.json",
	"include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/components/*": ["./components/*"],
			"@/lib/*": ["./lib/*"],
			"@/hooks/*": ["./lib/hooks/*"],
			"@/types/*": ["./types/*"],
			"@/styles/*": ["./styles/*"],
			"@/data/*": ["./data/*"],
			"@/config/*": ["./config/*"]
		},
		"strictNullChecks": true
	}
}
